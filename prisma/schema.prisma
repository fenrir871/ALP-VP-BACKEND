generator client {
  provider = "prisma-client"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id            Int      @id @default(autoincrement())
  name          String
  username      String   @unique
  phone         String
  email         String   @unique
  password      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  weeklySummaries WeeklySummary[]
  friends         Friends[]       @relation("UserFriends")
  friendOf        Friends[]       @relation("FriendOf")
  dailyActivities DailyActivity[]       @relation("DailyActivities")

  @@map("users")
}

model DailyActivity{
  id          Int      @id @default(autoincrement())
  date        DateTime
  steps       Int
  sleepHours  Float    @map("sleep_hours")
  waterIntake Float    @map("water_intake")
  calories    Int

  userId      Int      @map("user_id")
  user        User     @relation("DailyActivities", fields: [userId], references: [id], onDelete: Cascade)

  @@map("today_activity")
}

model WeeklySummary{
  id             Int      @id @default(autoincrement())

  weekStartDate  DateTime @map("week_start_date")

  avgSteps       Float    @map("avg_steps")
  avgSleep       Float    @map("avg_sleep")
  avgWater       Float    @map("avg_water")
  avgCalories    Float    @map("avg_calories")

  scoreSteps     Int      @map("score_steps")
  scoreSleep     Int      @map("score_sleep")
  scoreWater     Int      @map("score_water")
  scoreCalories  Int      @map("score_calories")

  userId         Int      @map("user_id")
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("weekly_summary")
}

model Friends{
  id        Int   @id @default(autoincrement())

  userId    Int   @map("user_id")
  friendId  Int   @map("friend_id")
  status    String  @db.VarChar(20)

  user      User  @relation("UserFriends", fields: [userId], references: [id], onDelete: Cascade)
  friend    User  @relation("FriendOf", fields: [friendId], references: [id], onDelete: Cascade)

  @@map("friends")
}
